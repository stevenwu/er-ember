<h3>Log In</h3>

{{#if response.success}}
  <div>Logged in</div>
{{/if}}

{{#if response.failure}}
  <div>Unauthorized</div>
{{/if}}

<div {{bind-attr class=':alert :alert-success hidden'}}>Password reset instructions sent to your email!</div>

<div class='row login-modal'>
<form>
  <div class='form-group col-md-4'>
    {{input value=email class='form-control email' placeholder='Email'}}
  </div>
  <div class='form-group col-md-4'>
    {{input value=password type='password' class='form-control password' placeholder='Password'}}
  </div>
  <button {{action 'authenticate'}} class='submit btn btn-default btn-sm'>Sign in</button>
  <button {{action 'toggle_recovery'}} class='btn btn-link'>Forgot password?</button>
</form>
</div>

<div class='row password-recovery'>
  <form>
    <div class='form-group col-md-4'>
      {{input value=email class='form-control email' placeholder='Email'}}
    </div>
  </form>
  <button {{action 'recover_password'}} class='submit btn btn-default btn-sm'>Send Instructions</button>
  <button {{action 'toggle_recovery'}} class='btn btn-link'>Return to login</button>
</div>

