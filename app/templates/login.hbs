<h3>Log In</h3>

{{#if response.success}}
  <div>Logged in</div>
{{/if}}

{{#if response.failure}}
  <div>Unauthorized</div>
{{/if}}

<form>
  <div class='form-group col-md-4'>
  {{input value=email class='form-control email' placeholder='Email'}}
  </div>
  <div class='form-group col-md-4'>
  {{input value=password type='password' class='form-control password' placeholder='Password'}}
  </div>
  <button {{action 'authenticate'}} class='submit btn btn-default btn-sm'>Sign in</button>
</form>
